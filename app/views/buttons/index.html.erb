<p id="notice"><%= notice %></p>

<h1>Buttons</h1>

<table>
  <thead>
    <tr>
      <th>Colour</th>
      <th>Description</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buttons.each do |button| %>
      <tr>
        <td><%= button.colour %></td>
        <td><%= button.description %></td>
        <td><%= button.size %></td>
        <td><%= button.price %></td>
        <td><%= link_to 'Show', button %></td>
        <td><%= link_to 'Edit', edit_button_path(button) %></td>
        <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Button', new_button_path %>
